<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/splashFragment">

    <fragment
        android:id="@+id/splashFragment"
        android:name="com.dani.rickandmortyapi.ui.SplashFragment"
        android:label="SplashFragment" >
        <action
            android:id="@+id/action_splashFragment_to_mainFragment"
            app:destination="@id/mainFragment"
            app:popUpTo="@id/splashFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/mainFragment"
        android:name="com.dani.rickandmortyapi.ui.list.MainFragment"
        android:label="@string/characters"
        tools:layout="@layout/activity_characters_list" >
        <action
            android:id="@+id/action_mainFragment_to_detailFragment"
            app:destination="@id/detailFragment"
            app:enterAnim="@anim/translate_in"
            app:exitAnim="@anim/fade_out"
            app:popEnterAnim="@anim/fade_in"
            app:popExitAnim="@anim/translate_out" />
    </fragment>
    <fragment
        android:id="@+id/detailFragment"
        android:name="com.dani.rickandmortyapi.ui.detail.DetailFragment"
        android:label="fragment_detail"
        tools:layout="@layout/activity_characters_detail_two">
        <argument
            android:name="id"
            app:argType="integer" />
        <deepLink
            android:id="@+id/deepLink"
            app:uri="app://film/{id}" />
    </fragment>

</navigation>